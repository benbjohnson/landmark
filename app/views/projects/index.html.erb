<div class="row" style="padding: 0 32px; margin-top:20px">
  <div class="span12">
    <% if @projects.length > 0 %>
      <%= link_to('Add Project', new_project_path, :class => 'btn btn-small btn-primary btn-embossed mlm pull-right', :style => 'margin-top:10px')%>
    <% end %>

    <h3>Projects</h3>

    <% if @projects.length == 0 %>
      <p>It doesn't look like you have any projects yet.</p>

      <%= link_to('Add Project', new_project_path, :class => 'btn btn-large btn-primary btn-embossed mlm', :style => 'margin-top:10px')%>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th class="span5">Project Name</th>
            <th>API Key</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to(project.name, edit_project_path(project)) %></td>
              <td><%= project.api_key %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
