<div class="row" style="padding: 0 32px; margin-top:20px">
  <div class="span6 offset3">
    <h2>Resend confirmation instructions</h2>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= render "shared/flash", :flash => flash, :resource => resource %>

      <div class="control-group">
        <%= f.label :email, nil, :class => 'control-label' %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true, :class => 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit('Resend confirmation instructions', :class => 'btn btn-primary btn-embossed') %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>