<div class="row" style="padding: 0 32px;">
  <div class="span12">
    <h3><%= @resource.uri %></h3>

    <div class="row">
      <div class="span6">
        <h4>Next Pages</h4>      
        <table class="table table-striped table-hover">
          <tbody>
              <% @next_pages.each do |page_view| %>
                <tr>
                  <td><%= link_to(page_view[:uri], project_resource_path(@project, page_view[:resource].slug)) %></td>
                  <td><%= page_view[:count] %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
