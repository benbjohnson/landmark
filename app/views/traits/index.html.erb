<div class="row" style="padding: 0 32px; margin-top:20px">
  <div class="span8">
    <h3>User Traits</h3>

    <% if @traits.length == 0 %>
      <p>It doesn't look like you're tracking any traits about your users yet.</p>

    <% else %>
      <p>Track data about your users.</p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Trait Name</th>
            <th>Data Type</th>
          </tr>
        </thead>
        <tbody>
          <% @traits.each do |trait| %>
            <tr>
              <td><%= trait.name %></td>
              <td><%= data_type_label(trait.data_type) %></td>
              <td><%= link_to('Delete', trait_path(trait.name), :method => 'DELETE', :confirm => "Are you sure you want to delete '#{trait.name}'?") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
