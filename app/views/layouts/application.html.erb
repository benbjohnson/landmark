<!DOCTYPE html>
<html>
<head>
  <title>Landmark</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar header">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target="#nav-collapse-01">
      </button>
      <a href="#" class="brand">Landmark</a>

      <div class="nav-collapse collapse" id="nav-collapse-01">
        <% if user_signed_in? %>
          <ul class="nav">
            <li class="<%= request.path == '/flows' ? 'active' : '' %>">
              <%= link_to('Flow', flows_path) %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Settings <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to('User Traits', traits_path) %></li>
                <li><%= link_to('Action Properties', properties_path) %></li>
                <li class="divider"></li>
                <li><a href="#">Account &amp; Users</a></li>
              </ul>
            </li>
            <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        <% end %>

        <!--
        <form class="navbar-search form-search pull-right" action="">
          <div class="input-append">
            <input type="text" class="search-query span3" placeholder="Search">
            <button type="submit" class="btn btn-large">
              <i class="fui-search"></i>
            </button>
          </div>
        </form>
        -->
      </div>
    </div>
  </div>
</div>

<!--
<% if !notice.blank? %>
  <p class="notice"><%= notice %></p>
<% end %>
<% if !alert.blank? %>
  <p class="alert"><%= alert %></p>
<% end %>
-->

<%= yield %>

</body>
</html>
